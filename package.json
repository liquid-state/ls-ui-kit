{
  "name": "ui-kit-root",
  "version": "0.4.0",
  "description": "Liquid State UI Kit for Desktop and Mobile.",
  "private": true,
  "scripts": {
    "build": "lerna run build",
    "storybook": "yarn build && yarn workspace @liquid-state/ui-kit-stories run storybook",
    "lint": "eslint packages/*/src/**/*.{js,jsx}",
    "lint:fix": "eslint packages/*/src/**/*.{js,jsx} --fix"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "antd": "~3.22.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "@storybook/react": "^4",
    "@storybook/addon-actions": "^4"
  },
  "devDependencies": {
    "@babel/core": "^7",
    "husky": "1.2.0",
    "lerna": "^3.4.3",
    "lint-staged": "^8.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn audit"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  }
}
